<h1 class="text-center mb-3">{{title}}</h1>
<form action="/api/courses" method="POST" class="mb-4">
    <div class="form-group">
        <label for="name">Course Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    <input type="submit" value="Add Course" class="btn btn-primary btn-block">
</form>
<h4>Courses</h4>
<ul class="list-group">
    {{#each courses}}
    <li class="list-group-item">{{this.id}}: {{this.name}}</li>
    {{/each}}
</ul>

<a href="/api/courses" class="btn btn-light mt-4">Visit API : You can see the course which are selected from here</a>